{
    "$schema": "https://railway.app/railway.schema.json",
    "services": [
        {
            "name": "meme-aggregator-server",
            "rootPath": "backend",
            "buildCommand": "npm install && npm run build",
            "startCommand": "npm run start",
            "environmentIds": [
                "redis"
            ]
        },
        {
            "name": "bullmq-worker",
            "rootPath": "backend",
            "buildCommand": "npm install",
            "startCommand": "npm run worker"
        }
    ],
    "environments": {
        "production": {
            "isDefault": true
        }
    }
}